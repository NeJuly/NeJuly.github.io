@require './antd.styl'
@require './code'
@require './custom-blocks'
@require './wrapper'

html, body
  margin 0
  padding 0
  background-color $bgColor

body
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 16px
  color $textColor

{$contentClass}:not(.custom)
  @extend $wrapper
  > *:first-child
    margin-top $navbarHeight

  a:hover
    text-decoration underline
    color $accentColor

  img
    max-width 100%

p:not(.custom-block)
  display block
  margin-block-start .6rem
  margin-block-end .6rem
  margin-inline-start 0
  margin-inline-end 0

a
  font-weight 500
  color $accentColor
  text-decoration none

p a code
  font-weight 400
  color $accentColor

kbd
  padding 0 .15em
  border solid .15rem #ddd
  border-bottom solid .25rem #ddd
  border-radius .15rem
  background #eee

blockquote
  margin 1rem 0
  padding .25rem 0 .25rem 1rem
  color #999
  font-size 1rem
  border-left .2rem solid #dfe2e5

  & > p
    margin 0

ul, ol
  padding-left 1.2em

strong
  font-weight 600

h1, h2, h3, h4, h5, h6
  color $textColor
  font-weight 600
  line-height 1.25

  {$contentClass}:not(.custom) > &
    margin-top (0.5rem - $navbarHeight)
    padding-top ($navbarHeight + 1rem)
    margin-bottom 0

    &:first-child
      margin-top -1.5rem
      margin-bottom 1rem

      + p, + pre, + .custom-block
        margin-top 2rem

  &:hover .header-anchor
    opacity: 1

h1
  font-size 2.2rem

h2
  font-size 1.65rem
  padding-bottom .5rem
  border-bottom 1px solid #ddd

h3
  padding-bottom .3rem
  font-size 1.35rem

h4
  padding-bottom .3rem
  font-size 1.1rem

a.header-anchor
  float left
  opacity 0
  margin-top .125em
  margin-left -0.87em
  padding-right 0.23em
  font-size 0.85em

    &:hover
      text-decoration none

code, kbd
  font-family source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace

p, ul, ol
  line-height 1.7

hr
  border 0
  border-top 1px solid $viceBgColor

table
  display block
  margin 1rem 0
  border-collapse collapse
  overflow-x auto

tr
  border-top 1px solid #dfe2e5

  &:nth-child(2n)
    background-color #f6f8fa

th, td
  border 1px solid #dfe2e5
  padding .6em 1em

::-webkit-scrollbar
  width 8px
  height 5px

::-webkit-scrollbar-thumb
  border-radius 5px
  background-image $gradientColor

::-webkit-scrollbar-track
  background $viceBgColor
  broder-radius 5px

@require 'mobile.styl'